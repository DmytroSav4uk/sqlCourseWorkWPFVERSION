<Window x:Class="sqlCourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Query Executor" Height="600" Width="900">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="LightGray">
                <Button Content="Select Queries" Width="150" Margin="5" Click="SelectPageButton_Click" />
                <Button Content="Insert Queries" Width="150" Margin="5" Click="InsertPageButton_Click" />
                <Button Content="Database Info" Width="150" Margin="5" Click="DatabaseInfoPageButton_Click" />
                <Button Content="Update Queries" Width="150" Margin="5" Click="Update_Click" />
            </StackPanel>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>